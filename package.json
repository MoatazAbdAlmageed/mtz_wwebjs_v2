{
  "name": "whatsapp",
  "version": "1.0.0",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha",
    "lint": "eslint src",
    "build": "webpack",
    "prettier": "prettier --write \"src/**/*.js\"",
    "format": "npm run prettier && npm run lint -- --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "express": "^4.18.2",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.22.1"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "webpack": "^5.52.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
